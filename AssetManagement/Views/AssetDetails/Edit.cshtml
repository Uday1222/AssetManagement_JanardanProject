                <label asp-for="Status" class="control-label"></label>
                @Html.DropDownListFor(model => model.SelectedStatus, Model.Status, "Select Status", new { @class = "form-control" })
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalDetails" class="control-label"></label>
                <input asp-for="AdditionalDetails" class="form-control" />
                <span asp-validation-for="AdditionalDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
